{
  "name": "remix-template-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "format": "prettier --write app types",
    "lint:css": "stylelint \"app/*.css\"",
    "lint:js": "eslint app types",
    "lint": "npm run lint:js # if you have css && npm run lint:css",
    "prepare": "is-ci || husky install",
    "release": "release-it",
    "deploy": "wrangler publish",
    "build": "remix build",
    "dev:remix": "remix watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "^0.1.2",
    "@metronome-sh/cloudflare-workers": "^5.6.1",
    "@metronome-sh/react": "^5.6.1",
    "@remix-run/cloudflare": "^1.7.4",
    "@remix-run/cloudflare-workers": "^1.7.4",
    "@remix-run/react": "^1.7.4",
    "classnames": "2.3.1",
    "dotenv": "^16.0.0",
    "i18next": "22.0.3",
    "i18next-browser-languagedetector": "7.0.0",
    "lodash.memoize": "4.1.2",
    "plone-restapi-client": "0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "12.0.0",
    "react-player": "2.11.0",
    "remix-i18next": "^4.1.1",
    "remix-utils": "^3.4.0",
    "tiny-invariant": "^1.2.0",
    "tlds": "1.231.0",
    "uuid": "8.3.2",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@release-it/conventional-changelog": "5.1.1",
    "@remix-run/dev": "^1.7.4",
    "@remix-run/eslint-config": "^1.7.4",
    "@remix-run/node": "^1.7.4",
    "@types/dotenv": "^8.2.0",
    "@types/lodash.memoize": "4.1.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/uuid": "8.3.4",
    "cross-env": "7.0.3",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "miniflare": "2.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "release-it": "15.5.0",
    "stylelint": "14.13.0",
    "stylelint-config-idiomatic-order": "9.0.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recommended": "9.0.0",
    "typescript": "^4.7.4",
    "wrangler": "^2.1.13"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "tabWidth": 4,
          "printWidth": 120
        }
      },
      {
        "files": "*.json",
        "options": {
          "printWidth": 200
        }
      }
    ]
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "eslintConfig": {
    "extends": [
      "@remix-run/eslint-config",
      "@remix-run/eslint-config/node",
      "@remix-run/eslint-config/jest",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest",
      "jsx-a11y"
    ],
    "settings": {
      "jest": {
        "version": 27
      }
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "trailingComma": "none"
        }
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "section": "Changes"
            },
            {
              "type": "chore",
              "section": "Maintenance"
            }
          ]
        }
      }
    }
  },
  "engines": {
    "node": ">=16.13"
  }
}
